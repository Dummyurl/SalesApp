<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar_activity_new"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <AutoCompleteTextView
            android:id="@+id/autoCompleteTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_search_gray_24dp"
            android:drawableRight="@drawable/ic_search_gray_24dp"
            android:hint="@string/search_cust"
            android:visibility="gone"
            android:padding="10dp" />

        <ExpandableListView
            android:id="@+id/expandCategoriesList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:groupIndicator="@drawable/ic_arrow_drop_down_white_32dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvNoResult"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/no_information_text" />
    </LinearLayout>

</LinearLayout>